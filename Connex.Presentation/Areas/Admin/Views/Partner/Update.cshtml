@model PartnerUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Partnyor dəyişdir
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>




                <div class="form-group">
                    <label for="exampleInputUsername1">Adı</label>
                    <input class="form-control" required asp-for="Name" placeholder="Ad daxil edin">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1">Vebsaytı (əgər varsa)</label>
                    <input class="form-control" asp-for="OfficialWebsite" placeholder="Vebsaytı daxil edin">
                    <span asp-validation-for="OfficialWebsite" class="text-danger"></span>
                </div>



                <hr />
                <br />
                <br />


                <div class="form-group">
                    <img  src="@Model.ImagePath" width="100" height="100"/>
                    <input asp-for="ImagePath" type="hidden"/>
                    <label for="exampleInputUsername1"> Şəkil seçin</label>
                    <input class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>



                <button type="submit" class="btn btn-primary mr-2">Dəyişdir</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>






