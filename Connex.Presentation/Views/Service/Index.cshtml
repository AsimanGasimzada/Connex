@model List<ServiceGetDto>
<!-- service section -->

<section class="service_section layout_padding" style="background-color:#00204a">
    <div class="service_container">
        <div class="container ">
            <div style="color:white;" class="heading_container heading_center">
                <h2 id="ourServices">
                    Our <span>Services</span>
                </h2>
                <p id="serviceSubtitle">
                    There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration
                </p>
            </div>
            <div class="row d-flex flex-wrap">
                @foreach (var service in Model)
                {
                    <div class="col-md-4 d-flex">
                        <div class="box flex-grow-1 d-flex flex-column" style="min-height:300px !important; word-break:break-all; overflow:hidden;">
                            <div class="img-box" style="flex: 0 0 auto; width: 100%; height: 250px; position: relative; overflow: hidden;">
                                <img src="@service.ImagePath" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <div class="detail-box mt-auto" style="flex-grow: 1;">
                                <h5 class="service-name" style="flex-grow: 1; display: flex; align-items: center;">
                                    @service.Name
                                </h5>
                                <p>
                                    @service.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>

<!-- end service section -->
@section Scripts {
                                <script src="~/js/serviceRender.js"></script>
}